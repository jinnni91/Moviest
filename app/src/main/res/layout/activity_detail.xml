<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detail.DetailActivity">

    <View
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:id="@+id/view"
            android:background="#D9ACEF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:background="@drawable/edge"
            android:backgroundTint="#D9ACEF"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailTitle"
            android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.495"/>
    <TextView
            android:text="장르"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailGenre"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            android:layout_marginStart="52dp"
            app:layout_constraintTop_toBottomOf="@+id/detailCode"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="장르"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="14sp"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/detailYear"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="92dp"/>
    <TextView
            android:text="COMMENT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            android:layout_marginTop="60dp"
            app:layout_constraintHorizontal_bias="0.797"/>
    <Button
            android:text="등록"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/btnRegist"
            android:backgroundTint="@android:color/holo_purple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="68dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.264"/>
    <TextView
            android:text="영화코드"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailCode"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/detailTitle"
            android:layout_marginTop="80dp"
            android:layout_marginStart="26dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="영화코드"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailTitle"
            android:layout_marginTop="80dp"
            android:layout_marginStart="76dp"
            android:textStyle="bold"
            android:textSize="14sp"/>
    <TextView
            android:text="제목"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailTitle"
            android:textColor="@android:color/holo_purple"
            android:textStyle="bold"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="136dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="22sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:hint="코멘트를 입력하세요"
            android:textSize="16dp"
            android:id="@+id/editReview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnRegist"
            app:layout_constraintHorizontal_bias="0.813"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.236"/>
    <TextView
            android:text="감독"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailDirector"
            app:layout_constraintTop_toBottomOf="@+id/detailGenre"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            android:layout_marginStart="52dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="감독"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="14sp"/>
    <TextView
            android:text="제작연도"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailYear"
            app:layout_constraintTop_toBottomOf="@+id/detailDirector"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            android:layout_marginStart="22dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="제작연도"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="14sp"/>
    <ImageButton
            android:scaleType="fitXY"
            android:background="#00ff0000"
            android:layout_width="50dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/arrow"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/btnBack"/>
</androidx.constraintlayout.widget.ConstraintLayout>