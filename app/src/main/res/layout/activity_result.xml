<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gr1"
        tools:context=".login.ResultActivity">

    <ImageView
            android:layout_width="59dp"
            android:layout_height="44dp" app:srcCompat="@drawable/loginicon" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <Button
            android:text="로그아웃"
            android:backgroundTint="@android:color/holo_purple"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:layout_width="75dp"
            android:layout_height="34dp"
            android:id="@+id/btnLogout"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.99" android:layout_marginEnd="5dp" android:layout_marginTop="4dp"/>

    <TextView
            android:text="Welcome To Moviest!"
            android:textSize="33dp"
            android:textStyle="italic"
            android:textColor="@android:color/holo_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="108dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"/>
    <TextView
            android:text="currentUser"
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColor="@android:color/holo_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentUser"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"/>
    <ImageView
            android:layout_width="144dp"
            android:layout_height="128dp"
            android:src="@drawable/videocam"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintBottom_toTopOf="@+id/btnDailyBoxOffice"
            app:layout_constraintHorizontal_bias="0.397"
            app:layout_constraintVertical_bias="0.8"/>
    <Button
            android:text="일별 박스오피스"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_width="150dp"
            android:layout_height="wrap_content" android:id="@+id/btnDailyBoxOffice"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/btnWeeklyBoxOffice"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            android:layout_marginBottom="44dp" app:layout_constraintHorizontal_bias="0.554"/>
    <Button
            android:text="주간/주말 박스오피스"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_width="150dp"
            android:layout_height="wrap_content" android:id="@+id/btnWeeklyBoxOffice"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="52dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView6" android:layout_marginBottom="48dp"/>
    <ImageView
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:src="@drawable/clapperboard"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnWeeklyBoxOffice"
            android:layout_marginEnd="64dp"
            app:layout_constraintVertical_bias="0.846"/>
    <ImageView
            android:layout_width="126dp"
            android:layout_height="119dp"
            android:src="@drawable/cloudy"
            android:id="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnWeather"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="20dp"/>
    <Button
            android:text="영화검색/리뷰"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_width="150dp"
            android:layout_height="wrap_content" android:id="@+id/btnSearchMv"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/btnWeather"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.402"
            android:layout_marginBottom="40dp"/>
    <ImageView
            android:layout_width="138dp"
            android:layout_height="123dp"
            android:src="@drawable/search"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintBottom_toTopOf="@+id/btnSearchMv"
            app:layout_constraintEnd_toStartOf="@+id/imageView6" app:layout_constraintHorizontal_bias="0.104"
            android:layout_marginBottom="20dp"/>
    <Button
            android:text="기온별 장르추천"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_width="150dp"
            android:layout_height="wrap_content" android:id="@+id/btnWeather"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" android:layout_marginEnd="44dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
